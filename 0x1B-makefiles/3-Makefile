# -*- Makefile -*-

CC=gcc
SRC=holberton.c main.c
OBJ=$(SRC:%.c=%.o)
NAME=holberton
RM=rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) -c -o $@ $<

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) $(OBJ) *~ $(NAME)

re: force
	$(CC) $(OBJ) -o $(NAME)

.PHONY: force
